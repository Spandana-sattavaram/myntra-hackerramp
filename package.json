{
  "name": "myntra-clone",
  "version": "1.0.0",
  "description": "A Myntra-like e-commerce website built with MERN stack",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "npm start",
    "build": "cd frontend/client && npm run build",
    "install-client": "cd frontend/client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "seed": "node scripts/seedData.js",
    "setup": "node setup.js"
  },
  "keywords": [
    "mern",
    "ecommerce",
    "react",
    "node",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mime-db": "^1.54.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "stripe": "^13.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
